<section class="container">
  <h3 class="blog-name">{{blog.name}}</h3>
  <h4>Opening Hour: {{format_time blog.starting_date}}</h4>
  <h4>Closing Hour: {{format_time blog.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each blog.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>